<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <h4><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h4>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.text_field :title, :placeholder => "Title" %>

  <br>
  <br>

  <%= f.text_area :content, :placeholder => "Write your article here" %>

  <br>
  <br>

  <%= f.submit 'Submit', :class => "btn btn-new" %>

<% end %>
