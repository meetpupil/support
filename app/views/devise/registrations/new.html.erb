<div class="container content">
  <div class="panel user">
    <div class="panel-heading">
      <strong>Create an account</strong>
      <span class="pull-right"><h6>or </h6><a href="/login"><h6>sign in</h6></a></span>
    </div>
    <div class="panel-body">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
      <br>

      <div class="field">
        <%= f.email_field :email, :class => "validate", :placeholder => "Email" %>
      </div>
      
      <br>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", :class => "validate", :placeholder => "Password" %>
      </div>
      
      <br>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm Password" %>
      </div>
      
      <br>

      <div class="actions">
        <%= f.submit "Sign up", :class => "btn btn-new" %>
      </div>
    <% end %>
    
      <br>

    </div>
  </div> 
</div>
